<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <!-- Define your repositories and servers here -->
  <servers>
    <!-- Nexus credentials -->
    <server>
      <id>nexus</id>
      <username>${admin}</username>
      <password>${October@#54321}</password>
    </server>

    <!-- (Optional) SonarQube token-based auth if you want Maven to handle it directly -->
    <server>
      <id>sonar</id>
      <username>${SONAR_AUTH_TOKEN}</username>
      <password></password>
    </server>
  </servers>

  <mirrors>
    <!-- Optional: use Nexus as a proxy for Maven Central -->
    <mirror>
      <id>nexus</id>
      <name>Nexus Mirror</name>
      <url>http://13.201.182.31:8081/repository/maven-public/</url>
      <mirrorOf>*</mirrorOf>
    </mirror>
  </mirrors>

  <profiles>
    <profile>
      <id>nexus</id>
      <repositories>
        <repository>
          <id>central</id>
          <url>https://repo.maven.apache.org/maven2</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>nexus</id>
          <url>http://13.203.18.114:8081/repository/maven-releases/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>central</id>
          <url>https://repo.maven.apache.org/maven2</url>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <!-- Activate the Nexus profile by default -->
  <activeProfiles>
    <activeProfile>nexus</activeProfile>
  </activeProfiles>

</settings>
